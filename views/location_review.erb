<div class="row">
    <div class="col-sm-9">
        <h2>
            <i class="fas fa-map-pin"></i>
            <%= @location[:city_country] %>
        </h2>
        <p><%= @location[:description] %></p>
        <% for review in @reviews %>
         <div class="media-body">
                    <h5 class="mt-0">                
                        <%= @users_table.where(id: review[:user_id]).to_a[0][:name] %> </h5>
                        <ul>
                            <li>When I visited: <%= review[:date_visited] %> </li>
                            <li>Food Rating (of 5): <%= review[:food] %> </li>
                            <li>My hotel: <%= review[:hotel] %> </li>
                            <li>Sounding off in the comments: <%= review[:comments] %></li>
                        </ul>
            </div>
        <% end %>
        <p class="mt-5">
        <% if @current_user %>
            <a href="/locations/<%= @location[:id] %>/reviews/new" class="btn btn-primary">Leave a review!</a>
        <% else %>
            <a href="/logins/new" class="btn btn-primary">Sign in to leave a review!</a>
        <% end %>
        </p>
    </div>
</div>